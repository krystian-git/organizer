<MDJokeCard>:
    id: joke_card
    orientation: "vertical"
    size_hint: (.95, None)
    pos_hint: {"center_x": .5}
    focus_behavior: True
    elevation: 11  
    padding: (10,10)
<JokeLabel>:
    theme_text_color:"Primary"

    canvas.before:
        Color:
            rgba: .3,.7,.9,1
        Rectangle:
            pos: self.pos
            size: self.size 

<DialogTabsContainer>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "70dp"

    MDTextField:
        id: dialog_text_field
        hint_text: "Start typing ..."

<ListItemWithCheckBox>
    font_style: 'Body1'    
    font_size: '30dp'
    
    CheckboxLeftWidget:
        on_active: root.on_checkbox_active(self.active)


Screen:
    NavigationLayout:
        ScreenManager:
            id: screen_manager

            MainScreen:
                name: "mainscreen"
                id: mainscreen
                tabs: tabs
                AppContainer:
                    id: appcontainer
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'Gory.jpg'

                    orientation: 'vertical'
                    MDToolbar:
                        id: toolbar
                        pos_hint: {"top": 1}
                        elevation: 15
                        title: "Organizer 2020"
                        right_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
          
                    TabsContainer:
                        id: tabs
                        text_color_normal: 1,1,1,1
                        font_style: 'Button'    
                        allow_stretch: False
                        on_tab_switch: app.on_tab_switch(*args)
                        background_normal: 1,1,1,1
                        text_color_active: 0,0,0,1
                        color_indicator: 0,0,0,1
                        tab_indicator_height: "4dp"
                                            
                MDFloatingActionButtonSpeedDial:
                    data: {"tab-minus":"Delete List", "tab-plus":"Add New List","minus":"Delete Selected", "plus": "Add New Note"}
                    rotation_root_buton: True
                    callback: self.parent.callback_tab
                    hint_animation: True

            CovidScreen:
                id: covidscreen
                name: "covidscreen"
                on_enter: covidscontainer.tables()
                on_leave: covidscontainer.table_reset()
                CovidsContainer:
                    cols:1
                    orientation: 'vertical'
                    id: covidscontainer   
                MDToolbar:
                    id: toolbar
                    pos_hint: {"top": 1}
                    elevation: 11
                    title: "Organizer 2020"
                    right_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                     

            CaroseneScreen:
                name: "carosenescreen"
                id: carosenescreen
                oil: oil
                scroll_box: scroll_box
                MDToolbar:
                    id: toolbar
                    pos_hint: {"top": 1}
                    elevation: 11
                    title: "Organizer 2020"
                    right_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                
                ScrollView: 
                    pos_hint: {'top': .98 - toolbar.height / self.parent.height}

                    GridLayout:
                        id: scroll_box
                        size_hint: 1,None
                        orientation: 'vertical'
                        cols:1
                        height: self.minimum_height + 80
                        spacing: "20dp"
                        padding: "20dp"
                     
                        MDCard:
                            id: oil_card
                            orientation: "vertical"
                            size_hint: (.95, None)
                            border_radius: "10dp"
                            height: oil.height
                            pos_hint: {"center_x": .5, "top":1}
                            focus_behavior: True
                            elevation: 11
                            
                            
                            MDLabel:
                                                
                                id: oil
                                text: ""
                                theme_text_color: "Primary"
                                size_hint:(1,None)
                                text_size: self.size 
                                halign: "center"
                                valign: "middle"
                                padding: (10,10)
                                canvas.before:
                                    Color:
                                        rgba: 0,0.8,0.8,1
                                    Rectangle:
                                        pos: self.pos
                                        size: self.size
                        #MDJokeCard:
                            #MDLabel:
                                #id: joke
                                #text: ""
                                #theme_text_color: "Primary"
                                #size_hint:(1,None)
                                #text_size: self.size 
                                #halign: "center"
                                #valign: "middle"
                                #canvas.before:
                                    #Color:
                                        #rgba: .3,.7,.9,1
                                    #Rectangle:
                                        #pos: self.pos
                                        #size: self.size      
            ContactUs:
                id: contactus
                name: "contactus"
                MDToolbar:
                    id: toolbar
                    pos_hint: {"top": 1}
                    elevation: 11
                    title: "Organizer 2020"
                    right_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                ScrollView: 
                    pos_hint: {'top': .98 - toolbar.height / self.parent.height}
                    scroll_type: ['bars', 'content']
                    GridLayout:
                        id: grid
                        size_hint: 1,None
                        padding: "20dp"
                        orientation: 'vertical'
                        cols:1
                        height: self.minimum_height +60
                        
                        MDCard:
                            id: card_email
                            height: plytka.height
                            orientation: "vertical"
                            size_hint: (.95, None)
                            focus_behavior: True
                            elevation: 11  
                            pos_hint: {'top':1, "center_x":.5}                      
                            MDBoxLayout:
                                id: plytka
                                orientation: 'vertical'
                                cols: 1
                                spacing: "20dp"
                                padding: "20dp"
                                adaptive_height: True
                                canvas.before:
                                    Color: 
                                        rgba: .8,.4,.4, 1
                                    Rectangle:
                                        pos: self.pos
                                        size: self.size
                                MDTextFieldRect:
                                    id: email
                                    multiline: False
                                    hint_text: "Your email"
                                    size_hint: 1, None
                                    height: "30dp"
                                    pos_hint: {'center_x':.5}
                                MDTextFieldRect:
                                    id: email_content
                                    size_hint: 1, None
                                    hint_text: "Leave a comment"
                                    height: "200dp"
                                    pos_hint: {'center_x':.5}
                                    multiline: True
                                MDRectangleFlatButton:
                                    text: "SEND MESSAGE"
                                    opposite_colors: True
                                    md_bg_color: 1,1,1,1
                                    pos_hint: {"center_x":.5}
                                    text_color:.5,.5,.5, 1
        
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:

                id: content_drawer
                orientation: "vertical"
                padding: "8dp"
                spacing: "8dp"
                Image: 
                    source: 'stock.jpg'
                    size: self.texture_size

                MDLabel:
                    text: "Organizer 2020"
                    size_hint_y: None
                    halign: "center"
                    font_size: "26dp" 
                    height: self.texture_size[0]
                    
                MDList:
                    
                    ItemDrawer:
                        text: "TODO Lists"
                        theme_text_color: "Custom"
                        on_release:
                            nav_drawer.set_state("close")
                            screen_manager.current = "mainscreen"
                        IconLeftWidget:
                            icon: "format-list-checks"
                            theme_text_color: "Custom"
                    ItemDrawer:
                        text: "Carosene Price / Euro Rate"
                        theme_text_color: "Custom"
                        on_release:
                            nav_drawer.set_state("close")
                            screen_manager.current = "carosenescreen"
                        IconLeftWidget:
                            icon: "gas-station"
                            theme_text_color: "Custom"
                    
                    ItemDrawer:
                        text: "Covid Stats"
                        theme_text_color: "Custom"
                        on_release:
                            nav_drawer.set_state("close")
                            screen_manager.current = "covidscreen"
                        IconLeftWidget:
                            icon: "biohazard"
                            theme_text_color: "Custom"
                MDLabel:
                        
                    size_hint_y: .1
                       
                MDList:
                    ItemDrawer:
                        text: "Contact Us"
                        theme_text_color: "Custom"
                        on_release:
                            nav_drawer.set_state("close")
                            screen_manager.current = "contactus"
                        IconLeftWidget:
                            icon: "email-send-outline"
                            theme_text_color: "Custom"