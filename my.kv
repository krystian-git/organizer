
<DialogTabsContainer>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "70dp"

    MDTextField:
        id: dialog_text_field
        hint_text: "Start typing ..."

<ListItemWithCheckBox>
    font_style: 'H6'    
    font_size: '30dp'
    RightCheckBox:
        on_active: root.on_checkbox_active(self.active)


Screen:
    NavigationLayout:
        ScreenManager:
            id: screen_manager

            MainScreen:
                name: "scr 1"
                id: mainscreen
                AppContainer:
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'Gory.jpg'

                    orientation: 'vertical'
                    MDToolbar:
                        id: toolbar
                        pos_hint: {"top": 1}
                        elevation: 15
                        title: "Organizer 2020"
                        right_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
          
                    TabsContainer:
                        id: tabs
                        font_style: 'H1'    
                        allow_stretch: False
                        on_tab_switch: app.on_tab_switch(*args)
                        background_normal: 0,0,0,0
                                            
                MDFloatingActionButtonSpeedDial:
                    data: {"minus":"Delete selected", "plus": "Add note"}
                    rotation_root_buton: True
                    callback: self.parent.callback_tab

            Screen:
                name: "scr 2"
                MDLabel:
                    text: 'Screen 2'
                MDToolbar:
                    id: toolbar
                    pos_hint: {"top": 1}
                    elevation: 10
                    title: "MDNavigationDrawer"
                    right_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
          
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                id: content_drawer
                
                MDList:

                    OneLineListItem:
                        text: "Screen 1"
                        on_press:
                            nav_drawer.set_state("close")
                            screen_manager.current = "scr 1"

                    OneLineListItem:
                        text: "Screen 2"
                        on_press:
                            nav_drawer.set_state("close")
                            screen_manager.current = "scr 2"
            
     