
<DialogTabsContainer>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "70dp"

    MDTextField:
        id: dialog_text_field
        hint_text: "Start typing ..."

<ListItemWithCheckBox>
    font_style: 'Body1'    
    font_size: '30dp'
    halign: "left"
    RightCheckBox:
        on_active: root.on_checkbox_active(self.active)


Screen:
    NavigationLayout:
        ScreenManager:
            id: screen_manager

            MainScreen:
                name: "mainscreen"
                id: mainscreen
                tabs: tabs
                AppContainer:
                    id: appcontainer
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'Gory.jpg'

                    orientation: 'vertical'
                    MDToolbar:
                        id: toolbar
                        pos_hint: {"top": 1}
                        elevation: 15
                        title: "Organizer 2020"
                        right_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
          
                    TabsContainer:
                        id: tabs
                        text_color_normal: 1,1,1,1
                        font_style: 'H5'    
                        allow_stretch: False
                        on_tab_switch: app.on_tab_switch(*args)
                        background_normal: 1,1,1,1
                        text_color_active: 0,0,0,1
                        color_indicator: 0,0,0,1
                        tab_indicator_height: "4dp"
                                            
                MDFloatingActionButtonSpeedDial:
                    data: {"tab-minus":"Delete List", "tab-plus":"Add New List","minus":"Delete Selected", "plus": "Add New Note"}
                    rotation_root_buton: True
                    callback: self.parent.callback_tab
                    hint_animation: True

            CovidScreen:
                id: covidscreen
                name: "covidscreen"
                on_enter: covidscontainer.tables()
                on_leave: covidscontainer.table_reset()
                CovidsContainer:
                    cols:1
                    orientation: 'vertical'
                    id: covidscontainer   
                MDToolbar:
                    id: toolbar
                    pos_hint: {"top": 1}
                    elevation: 11
                    title: "Organizer 2020"
                    right_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
            
            JokeScreen:
                id: jokescreen  
                name: "jokescreen"
                BoxLayout:
                    padding: "10dp"
                    spacing: "10dp"
                    orientation:"vertical"
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'Gory.jpg'
                    
                    MDCard:
                        orientation: "vertical"
                        padding: "10dp"
                        spacing: "10dp"
                        size_hint: None, None
                        size: (300, 100)
                        pos_hint: {"center_x": .5}  
                        MDLabel:
                            text: "Oil Price"
                            theme_text_color: "Secondary"
                            size_hint_y: None
                            height: self.texture_size[1]

                        MDSeparator:
                            height: "2dp"

                        MDLabel:
                            text: "The Cheapest Oil You Find around is ..."
                   
                    MDToolbar:
                        id: toolbar
                        pos_hint: {"top": 1}
                        elevation: 11
                        title: "Organizer 2020"
                        right_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
            

            CaroseneScreen:
                name: "carosenescreen"
                id: carosenescreen
                MDToolbar:
                    id: toolbar
                    pos_hint: {"top": 1}
                    elevation: 11
                    title: "Organizer 2020"
                    right_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        
                MDCard:
                    orientation: "vertical"
                    size_hint: None, None
                    size: "380dp", "120dp"
                    spacing: "20dp"
                    padding: "10dp"
                    pos_hint: {"center_x": .5, "center_y": .8}
                    MDLabel:
                        text: "Cheapest Oil in Ballina: Jones Oil - " + app.oil_price + " /1000L"
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        pos_hint: {"center_x":.5, "top":1}
                    MDRaisedButton:
                        text: "Refresh"
                        pos_hint: {"center_x":.5}
                        
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:

                id: content_drawer
                orientation: "vertical"
                padding: "8dp"
                spacing: "8dp"
                Image: 
                    source: 'stock.jpg'
                    size: self.texture_size

                MDLabel:
                    text: "Organizer 2020"
                    size_hint_y: None
                    halign: "center"
                    font_size: "26dp" 
                    height: self.texture_size[0]
                    
                MDList:
                    
                    ItemDrawer:
                        text: "TODO Lists"
                        theme_text_color: "Custom"
                        on_release:
                            nav_drawer.set_state("close")
                            screen_manager.current = "mainscreen"
                        IconLeftWidget:
                            icon: "format-list-checks"
                            theme_text_color: "Custom"
                    ItemDrawer:
                        text: "Carosene Price / Euro Rate"
                        theme_text_color: "Custom"
                        on_release:
                            nav_drawer.set_state("close")
                            screen_manager.current = "carosenescreen"
                        IconLeftWidget:
                            icon: "gas-station"
                            theme_text_color: "Custom"
                    ItemDrawer:
                        text: "Weather"
                        theme_text_color: "Custom"
                        on_release:
                            nav_drawer.set_state("close")
                            screen_manager.current = "jokescreen"
                        IconLeftWidget:
                            icon: "weather-partly-cloudy"
                            theme_text_color: "Custom"
                    ItemDrawer:
                        text: "Covid Stats"
                        theme_text_color: "Custom"
                        on_release:
                            nav_drawer.set_state("close")
                            screen_manager.current = "covidscreen"
                        IconLeftWidget:
                            icon: "biohazard"
                            theme_text_color: "Custom"
                MDLabel:
                        
                    size_hint_y: .1
                       
                MDList:
                    ItemDrawer:
                        text: "Contact Us"
                        theme_text_color: "Custom"
                        on_release:
                            nav_drawer.set_state("close")
                            screen_manager.current = "scr 2"
                        IconLeftWidget:
                            icon: "email-send-outline"
                            theme_text_color: "Custom"