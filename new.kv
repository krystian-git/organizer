<DialogTabsContainer>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "70dp"

    MDTextField:
        id: dialog_text_field
        hint_text: "start typing ..."

<ListItemWithCheckBox>
    font_style: 'H6'    
    font_size: '30dp'
    RightCheckBox:
        on_active: root.on_checkbox_active(self.active)


<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "kivymd_logo.png"

    MDLabel:
        text: "Polowy Family"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "Some Content here"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:

        DrawerList:
            id: md_list


<MainScreen>:
    AppContainer:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'hd red cool vertical lines iphone 4 wallpapers backgrounds.jpg'

        orientation: 'vertical'
        MDToolbar:
            title: "Organizer 2020"
            right_action_items: [["menu", lambda x: nav_drawer.toggle_nav_drawer()]]
        MDTabs:
            id: tabs
            font_style: 'H3'    

            on_tab_switch: root.on_tab_switch(*args)
            background_normal: 0,0,0,0
    MDToolbar:
    MDFloatingActionButtonSpeedDial:
        data: {"android": "add tab", "minus":"delete", "plus": "add note"}
        rotation_root_buton: True
        callback: root.callback_tab
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer: