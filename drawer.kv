#:import Snackbar kivymd.uix.snackbar.Snackbar
<MainScreen>:
    id: mainscreen
    name: 'mainscreen'
    AppContainer:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'Gory.jpg'

        orientation: 'vertical'
        
        TabsContainer:
            id: tabs
            font_style: 'H1'    
            allow_stretch: False
            on_tab_switch: app.on_tab_switch(*args)
            background_normal: 0,0,0,0
            

    MDFloatingActionButtonSpeedDial:
        data: {"minus":"Delete selected", "plus": "Add note"}
        rotation_root_buton: True
        callback: root.callback_tab


<DialogTabsContainer>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "70dp"

    MDTextField:
        id: dialog_text_field
        hint_text: "Start typing ..."

<ListItemWithCheckBox>
    font_style: 'H6'    
    font_size: '30dp'
    RightCheckBox:
        on_active: root.on_checkbox_active(self.active)


NavigationLayout:
    MDToolbar:
        title: "Organizer 2020"
        right_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        elevation: 10
        pos_hint: {"top": 1}
    MDNavigationDrawer:
        id: nav_drawer

        ContentNavigationDrawer:
            orientation: "vertical"
            padding: "8dp"
            spacing: "8dp"

            AnchorLayout:
                anchor_x: "left"
                size_hint_y: None

            NavigationDrawerIconButton:
                icon: 'plus'
                text: 'Add new Tab'
                on_release: mainscreen.popup_new_tab()
            NavigationDrawerIconButton:
                icon: 'minus'
                text: 'Delete Tab'

                on_press: tabs.remove_tab()
                on_release: nav_drawer.set_state("close")
            NavigationDrawerIconButton:
                icon: 'android'
                text: 'snackbar'
                #on_release: Snackbar(text="This is a snackbar!").show()
             
            MDLabel:
                text: "Polowy Family"
                font_style: "Button"
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                text: "Some Content here"
                font_style: "Caption"
                size_hint_y: None
                height: self.texture_size[1]

            
            
    ScreenManager:
        id: screen_manager

        Screen:
            name: 'mainscreen'
            MDLabel:
                text: 'ok'
        Screen:
            name: "screen2"
            MDLabel:
                    text: 'Screen 2'